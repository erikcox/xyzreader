<resources>

    <style name="Theme.xyz" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColor">@color/text_opacity_87</item>
        <item name="android:navigationBarColor">@color/theme_primary</item>
    </style>

    <style name="Theme.xyz.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.xyz.Toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.xyz.CardTextPrimary">
        <item name="android:textColor">@color/text_opacity_87</item>
        <item name="android:textSize">@dimen/card_primary_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.xyz.CardTextSecondary">
        <item name="android:textColor">@color/text_opacity_54</item>
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>
